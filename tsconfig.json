{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@libs/layout": [
        "src/libs/layout/index"
      ],
      "@libs/theme": [
        "src/libs/theme/index"
      ],
      "@libs/icons": [
        "src/libs/icons/index"
      ],
      "@libs/runs": [
        "src/libs/runs/index"
      ],
      "@libs/food": [
        "src/libs/food/index"
      ],
      "@libs/auth": [
        "src/libs/auth/index"
      ]
    }
  }
}